extends landing

block content
    div.col-md-12
        hr
        h4 Log in
        hr
        form#formLogin(method="POST", action="/login")
            div.form-group
                label(for="username") Username: 
                input#inputUsername.form-control(required="required",type="text", name="username")
            div.form-group
                label(for="password") Password: 
                input#inputPassword.form-control(type="password", name="password",required="required")
            div.col-md-offset-2
                div.col-md-6
                    input.btn.btn-success(required="required",type="submit", value="Log In")
                div.col-md-6
                    a.btn.btn-success(href="/signup") Sign up

